<ul class="nav navbar-nav">

    {{# each navLinks}}
		<li class="{{#if this.subLinks}}dropdown{{else}}mega-menu{{/if}} {{#ifeq ../section key}}active{{else}}{{/ifeq}}">
			<a class="dropdown-toggle"{{#if this.subLinks}} data-toggle="dropdown_{{key}}"{{/if}} href="{{ href }}">{{ label }}</a>
			
			{{#if this.subLinks}}

				<ul class="dropdown-menu">
				{{#each this.subLinks}}

					<li{{#ifeq sub_section key}} class="active"{{/ifeq}}>
						<a href="{{href}}">{{label}}</a>
					</li>
				
				{{/each}}
				</ul>
			{{/if}}
		
		</li>
	{{/each}}
</ul>
